<div class="container">
  <h1>Any questions about the project?</h1>
<div class="card blue-grey lighten-3 rewards_list container">
  <% if @chatroom.messages.any? %>
    <div class="card blue-grey lighten-3" id="messages">
      <%= render partial: 'messages/message', collection: @chatroom.messages %>
    </div>
  <% else %>
    <div class="card blue-grey lighten-3 hidden" id="messages">
    </div>
  <% end %>
</div>

<%= render partial: 'messages/message_form', locals: { message: @message,
                                                      chatroom: @chatroom } %>
</div>
